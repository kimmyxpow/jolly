{
    "compilerOptions": {
        "baseUrl": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "types": ["bun-types"],
        "declaration": true,
        "declarationDir": "./dist/types",
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
