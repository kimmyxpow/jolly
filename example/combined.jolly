// Combining variables, functions, loops, and classes
fun isEven(num) {
  return num % 2 === 0;
}

loopy (free i = 1; i <= 10; i++) {
  when (isEven(i)) {
    console.log(i + " is even");
  } meh {
    console.log(i + " is odd");
  }
}

fam Greeter {
  constructor(greeting) {
    this.greeting = greeting;
  }

  sayHello(name) {
    console.log(this.greeting + ", " + name + "!");
  }
}

lock greeter = call Greeter("Hello");
greeter.sayHello("Jolly World");
