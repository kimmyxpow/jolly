// Example of switch-case in Jolly syntax

lock weather = 'cloudy';

pick (weather) {
  option "sunny":
    console.log("It's a sunny day! ☀️");
    break;
  option "rainy":
    console.log("It's raining outside! ☔");
    break;
  option "cloudy":
    console.log("It's a bit gloomy today. ☁️");
    break;
  fallback:
    console.log("Weather unknown. 🌈");
}
